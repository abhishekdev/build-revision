# Read details about this file at http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true


[{*.js,*.json,*.jsx,*.html,*.css,*.less}]
indent_size = 4


[*.md]
max_line_length = 0
trim_trailing_whitespace = false


[package.json]
# The indent size used in the `package.json` file cannot be changed
# https://github.com/npm/npm/pull/3180#issuecomment-16336516
indent_size = 2
indent_style = space
