  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "ava": "^3.12.1",
    "coveralls": "^3.1.0",
    "nyc": "^15.1.0"
  }
